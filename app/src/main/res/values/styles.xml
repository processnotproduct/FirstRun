<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="textShadowDark">
        <item name="android:shadowColor">@color/text_shadow_dark</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">0.5</item>
    </style>

    <style name="textShadowMedium">
        <item name="android:shadowColor">@color/text_shadow_medium</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="textShadowLight">
        <item name="android:shadowColor">@color/text_shadow_light</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">0.5</item>
    </style>

</resources>